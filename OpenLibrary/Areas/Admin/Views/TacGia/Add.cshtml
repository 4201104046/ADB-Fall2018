@model OpenLibrary.Areas.Admin.Models.AddViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i> @ViewData["title_table"]</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                <li><i class="icon_document_alt"></i>Biểu mẫu</li>
                <li><i class="fa fa-file-text-o"></i>@ViewData["title_table"]</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    @ViewData["title_table"]
                </header>
                <div class="panel-body">
                    <form class="form-horizontal " method="post" enctype="multipart/form-data" action="/admin/tacgia/add">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">TÊN TÁC GIẢ</label>
                            <div class="col-sm-6">
                                <input asp-for="TenTacGia" type="text" class="form-control round-input">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">NGÀY SINH</label>
                            <div class="col-sm-6">
                                <input asp-for="NgaySinhTacGia" type="date" class="form-control round-input">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">GIỚI THIỆU</label>
                            <div class="col-sm-6">
                                <input asp-for="GioiThieu" type="text" class="form-control round-input">
                            </div>
                        </div>

                        <button type="submit">Thêm</button>
                    </form>
                </div>
            </section>

        </div>
    </div>



</section>


